{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angularsdk": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              {
                "glob": "sdk-config.json",
                "input": "./",
                "output": "./"
              },
              {
                "glob": "bootstrap-shell.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "bootstrap-shell.*.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "lib_asset.json",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "constellation-core.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation/prerequisite"
              },
              {
                "glob": "constellation-core.*.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation/prerequisite"
              },
              {
                "glob": "*.*",
                "input": "./node_modules/@pega/constellationjs/dist/js",
                "output": "./constellation/prerequisite/js"
              },
              {
                "glob": "*.*",
                "input": "./src/assets/",
                "output": "./constellation/assets"
              },
              {
                "glob": "*.*",
                "input": "./src/assets/icons/",
                "output": "./constellation/assets/icons"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/tinymce",
                "output": "./tinymce"
              },
              "src/assets/img"
            ],
            "styles": ["src/styles.scss"],
            "scripts": ["./node_modules/tinymce/tinymce.min.js"],
            "customWebpackConfig": {
              "path": "./extra-webpack.config.js"
            },
            "allowedCommonJsDependencies": ["lodash.clonedeep", "downloadjs", "dayjs", "fast-deep-equal"]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "7mb"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "angularsdk:build:production"
            },
            "development": {
              "buildTarget": "angularsdk:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "angularsdk:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/styles.scss"],
            "scripts": []
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "angularsdk:build",
            "compodocArgs": ["-d", "./storybook-assets"],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "angularsdk:build",
            "compodocArgs": ["-d", "."],
            "outputDir": "storybook-static"
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "angularsdk:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "angularsdk:serve:production"
            }
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  }
}
